# Store in ~/.matplotlib/stylelib, or install with:
# curl --create-dirs -o ~/.matplotlib/stylelib/scottoplot.mplstyle https://gist.githubusercontent.com/2n3906/85af5b8919f2a5607f360a2880b5b975/raw/770233dfd8be2d60f1b130133877a00822c1d964/scottoplot.mplstyle

# To use, invoke in Python:
# mpl.style.use('scottoplot')

# from http://www.huyng.com/posts/sane-color-scheme-for-matplotlib/

patch.linewidth: 0.5
patch.facecolor: 348ABD  # blue
patch.edgecolor: EEEEEE
patch.antialiased: True

font.size: 18.0
# font.sans-serif: Source Sans Pro
font.family: sans-serif
font.sans-serif: Futura, Metallophile Sp8
font.serif: Source Serif Pro
# necessary to make good PDF output
# see http://phyletica.org/matplotlib-fonts/
pdf.fonttype : 42
ps.fonttype : 42

axes.titlesize: 24.0
axes.titlepad: 10.0     # padding below title
axes.titleweight: bold

axes.facecolor: E5E5E5
axes.edgecolor: white
axes.linewidth: 1
axes.grid: True
# axes.titlesize: x-large
axes.labelsize: large
axes.labelcolor: 555555
axes.axisbelow: True       # grid/ticks are below elements (e.g., lines, text)

axes.prop_cycle: cycler('color', ['E24A33', '348ABD', '988ED5', '777777', 'FBC15E', '8EBA42', 'FFB5B8'])
                   # E24A33 : red
                   # 348ABD : blue
                   # 988ED5 : purple
                   # 777777 : gray
                   # FBC15E : yellow
                   # 8EBA42 : green
                   # FFB5B8 : pink

lines.linewidth: 2.0

xtick.color: 555555
xtick.direction: out

ytick.color: 555555
ytick.direction: out

grid.color: white
grid.linestyle: -    # solid line

figure.facecolor: white
figure.edgecolor: 0.50

# Get images of exactly 1600 x 900 pixels output
figure.figsize: 16, 9
figure.constrained_layout.use: True
figure.constrained_layout.w_pad: 0
figure.constrained_layout.h_pad: 0
figure.dpi: 100
savefig.dpi: 100
savefig.pad_inches: 0
savefig.edgecolor: 0.5
savefig.transparent: True

# speed-up
path.simplify: True
path.simplify_threshold: 1.0
agg.path.chunksize: 10000
